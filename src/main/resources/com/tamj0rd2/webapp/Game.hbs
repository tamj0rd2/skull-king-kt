<html>
<head>
    <link href="/style.css" rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="content">
    <h1>Game Page - {{playerId}}</h1>

    <h2 id="gameState">
        {{#if waitingForMorePlayers}}
            Waiting for more players...
        {{/if}}
    </h2>

    <h2 id="roundNumber"></h2>
    <h2 id="trickNumber"></h2>

    <h2 id="gamePhase"></h2>

    <h3>Players</h3>
    <ul id="players">
        {{#each players}}
            <li>{{this}}</li>
        {{/each}}
    </ul>

    <section id="handArea">
        <h3>Hand</h3>
        <ul id="hand"></ul>
    </section>

    <section id="trickArea">
        <h3>Cards in trick</h3>
        <ul id="trick"></ul>
    </section>
</div>
<script src="/game.js"></script>
<script>
    window.addEventListener("load", function() {
        const socket = new WebSocket("{{wsHost}}/{{playerId}}");
        socket.addEventListener("message", (event) => {
            console.log(`{{playerId}} received`, event.data);
        })
        connectToWs(socket)
    })
</script>
</body>
</html>
