<html>
<head>
    <link href="/style.css" rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="content">
    <h1>Game Page - {{playerId}}</h1>

    <h2 id="gameState">
        {{#if waitingForMorePlayers}}
            Waiting for more players...
        {{/if}}
    </h2>

    <h2 id="roundNumber"></h2>
    <h2 id="trickNumber"></h2>

    <h2 id="gamePhase"></h2>

    <h3>Players</h3>
    <ul id="players">
        {{#each players}}
            <li>{{this}}</li>
        {{/each}}
    </ul>

    <section id="handArea" class="u-hide">
        <h3>Hand</h3>
        <ul id="hand"></ul>
    </section>

    <form>
        <label>
            Bet
            <input type="number" name="bet" min="0" max="10">
        </label>
        <button id="placeBet" type="button" onclick="onBetSubmit()">Place Bet</button>
    </form>

    <section id="betsArea" class="u-hide">
        <h3>Bets</h3>
        <ul id="bets">
            {{#each players}}
                <li data-playerBet="{{this}}">{{this}}<span></span></li>
            {{/each}}
        </ul>
    </section>

    <section id="trickArea" class="u-hide">
        <h3>Cards in trick</h3>
        <ul id="trick"></ul>
    </section>
</div>
<script src="/game.js"></script>
<script>
    window.addEventListener("load", function() {
        connectToWs("{{wsHost}}/{{playerId}}")
    })
</script>
</body>
</html>
